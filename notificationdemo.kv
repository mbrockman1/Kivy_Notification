#:kivy 1.8.0
<NotificationDemo>:
    orientation: 'vertical'
    Widget:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Title'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Message'
            size_hint: 1, None
        TextInput:
            id: timing_text
            text: '5'
            size_hint: 1, None
            input_filter: 'int'
        Label:
            text: 'Repeat'
        Switch:
            id: switch
        Label:
            id: repeat_toggle
            text: 'True' if switch.active else 'False'
    Button:
        text: 'Simple Notification'
        size_hint: 1, None
        on_release: root.do_notify(mode='normal')
    Widget:

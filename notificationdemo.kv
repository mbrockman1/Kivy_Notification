#:kivy 1.8.0
<NotificationDemo>:
    orientation: 'vertical'
    Widget:
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        TextInput:
            id: notification_title
            text: 'Title'
            size_hint: 1, None
        TextInput:
            id: notification_text
            text: 'Message'
            size_hint: 1, None
        TextInput:
            id: ticker_text
            text: 'Notification'
            size_hint: 1, None
    Button:
        text: 'Simple Notification'
        size_hint: 1, None
        on_release: root.do_notify(mode='normal')
    Widget:
